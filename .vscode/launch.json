    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Setup server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\server.js",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Upload",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\client.js",
            "args": ["upload"],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Download",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\client.js",
            "args": ["download"],
        }
    ]
}